@model PatientRecordCURDWebApp.Models.Patient

@{
    ViewData["Title"] = "Create Patient";
}

<h1 class="text-info-emphasis mb-3">Add Patient</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Patient" asp-action="Create" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" autocomplete="off" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <label asp-for="PatientGender" class="control-label"></label>
				<input type="radio" asp-for="PatientGender" value="Male" /> Male
				<input type="radio" asp-for="PatientGender" value="Female" /> Female
                <span asp-validation-for="PatientGender" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <label asp-for="PatientAge" class="control-label"></label>
                <input asp-for="PatientAge" class="form-control" />
                <span asp-validation-for="PatientAge" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <label asp-for="PatientContact" class="control-label"></label>
                <input asp-for="PatientContact" class="form-control" autocomplete="off" />
                <span asp-validation-for="PatientContact" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="MedicalRecord.BloodGroup" />
            <input type="hidden" asp-for="MedicalRecord.HepatitisType" />
            <input type="hidden" asp-for="MedicalRecord.CholesterolLevel" />
            <input type="hidden" asp-for="MedicalRecord.BloodPressure" />
            <input type="hidden" asp-for="MedicalRecord.SugarLevel" />
            <input type="hidden" asp-for="MedicalRecord.Allergies" />
            <input type="hidden" asp-for="MedicalRecord.ChronicDiseases" />
            <input type="hidden" asp-for="MedicalRecord.MedicalHistory" />
            
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-success mt-2" />
            </div>

            <div>
                <a asp-action="Index" class="btn btn-secondary mt-5">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
